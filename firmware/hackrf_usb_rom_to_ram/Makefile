BINARY = hackrf_usb_rom_to_ram

SRC_DIR = hackrf_usb

SRC = hackrf_usb.c \
	usb.c \
	usb_request.c \
	usb_standard_request.c \
	usb_descriptor.c \
	usb_queue.c \
	../common/fault_handler.c \
